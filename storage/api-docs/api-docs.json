{
    "openapi": "3.0.0",
    "info": {
        "title": "Skills UG API Documentation",
        "description": "API documentation for Skills UG.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/jobs": {
            "get": {
                "tags": [
                    "Jobs"
                ],
                "summary": "Retrieve a list of active jobs",
                "description": "Fetches a paginated list of active jobs, with optional filtering by title or status.",
                "operationId": "getJobs",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search term to filter jobs by title",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filter jobs by status",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of jobs to display per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 16
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "Paginated job data",
                                            "type": "object"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Success"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Jobs",
            "description": "Jobs"
        }
    ]
}
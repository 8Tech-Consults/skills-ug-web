{
    "openapi": "3.0.0",
    "info": {
        "title": "API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/api/users/login": {
            "post": {
                "summary": "User Login",
                "operationId": "adbe720dc4dcedd623b9794954f55254",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "admin"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "admin"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Logged in successfully"
                    },
                    "400": {
                        "description": "Wrong or missing credentials"
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "summary": "User Registration",
                "operationId": "86b99167953f28d81ec79b565fdc5f52",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone_number_1",
                                    "password",
                                    "name"
                                ],
                                "properties": {
                                    "phone_number_1": {
                                        "type": "string",
                                        "example": "+256700123456"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "secret"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "john@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Account created successfully"
                    },
                    "400": {
                        "description": "Validation errors or account already exists"
                    }
                }
            }
        }
    },
    "tags": []
}